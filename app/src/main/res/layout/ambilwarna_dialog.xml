<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include
        android:id="@+id/ambilwarna_includePemilih"
        layout="@layout/ambilwarna_pemilih"
        android:layout_width="296dp"
        android:layout_height="256dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <AbsoluteLayout
            android:layout_width="200dp"
            android:layout_height="40dp">

            <View
                android:id="@+id/ambilwarna_warnaLama"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_x="0dp"
                android:layout_y="0dp"
                android:background="#aaa" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_x="80dp"
                android:layout_y="0dp"
                android:src="@drawable/ambilwarna_menjadi" />

            <View
                android:id="@+id/ambilwarna_warnaBaru"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_x="120dp"
                android:layout_y="0dp"
                android:background="#aff" />
        </AbsoluteLayout>
    </LinearLayout>
</LinearLayout>
